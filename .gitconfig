[user]
  email = jcraigk@gmail.com
  name = Justin Craig-Kuhn (JCK)

[core]
  pager = delta

[pull]
  rebase = false

[push]
  default = current

[delta]
  syntax-theme = OneHalfDark
  file-style = "bold #ff8272"
  file-decoration-style = "#ff8272 ol"
  hunk-header-style = "bold reverse #bbbbbb"
  hunk-header-decoration-style = "none"
  minus-style = "syntax #1f0000"
  minus-emph-style = "syntax #590102"
  plus-style = "syntax #001400"
  plus-emph-style = "syntax #01590a"

[init]
  defaultBranch = main

[url "git@github.com:"]
  insteadOf = "https://github.com/"

[color]
  ui = auto

[color "status"]
  added = 28 bold
  changed = 167 bold
  untracked = 167 bold
  branch = blue bold
  header = white dim
  unmerged = 167 bold

[include]
  path = ~/.gitconfig.local
