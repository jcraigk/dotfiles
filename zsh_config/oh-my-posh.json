{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "command",
          "style": "plain",
          "foreground": "#5fb3ff",
          "template": "{{ .Output }}",
          "properties": {
            "cache_duration": "none",
            "command": "bash -lc 'cd=$(pwd -P); if git rev-parse --is-inside-work-tree >/dev/null 2>&1; then root=$(git rev-parse --show-toplevel); rel=${cd#$root}; if [ -z \"$rel\" ]; then basename \"$root\"; else printf \"%s%s\" \"$(basename \"$root\")\" \"$rel\"; fi; else if [ \"$cd\" = \"$HOME\" ]; then echo \"~\"; elif [[ \"$cd\" == \"$HOME\"/* ]]; then echo \"~${cd#$HOME}\"; else basename \"$cd\"; fi; fi'"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#5fb3ff",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#cc6666{{ else }}#808080{{ end }}"
          ],
          "properties": {
            "fetch_status": true,
            "display_status": false,
            "display_upstream_icon": false,
            "branch_icon": ""
          },
          "template": " \uf418 <#808080>{{ .HEAD }}</>"
        },
        {
          "template": " \uf18e ",
          "foreground": "#a0a0a0",
          "type": "text",
          "style": "plain"
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
